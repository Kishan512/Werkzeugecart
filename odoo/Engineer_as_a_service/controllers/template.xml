<!-- .............................. orders ................ -->

    <template id="orders">
        <t t-call="web.layout">        
        <t t-call="Engineer_as_a_service.header"/>
            <div class="container">  
                <div class="mt-5 mb-5">
                   <h1>Orders list </h1> 
                </div>
                <div>
                    <table class="table" style="width:80%">
                        <thead>
                            <tr>
                                <th>id</th>
                                <th>Name</th>
                                <th>Order Date</th>
                                <th>Order Time</th>
                                <th>Order Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                                <t t-set="sr_no" t-value="1"/>
                                <t t-foreach="order_list" t-as="order" t-key="order.id">
                                    <tr>
                                        <td><t t-esc="sr_no"/></td>
                                        <td><t t-esc="order.engineer_id.name"/></td>
                                        <td>
                                            <t t-esc="order.create_date.day"/>/
                                            <t t-esc="order.create_date.month"/>/
                                            <t t-esc="order.create_date.year"/>
                                        </td>
                                        <td>
                                            <t t-esc="order.create_date.hour"/>:
                                            <t t-esc="order.create_date.minute"/> 
                                        </td>
                                        <t t-if="order.order_status==0">
                                            <td class="btn btn-danger">rejected</td>
                                        </t>
                                        <t t-if="order.order_status==1">
                                            <td class="btn btn-warning">Pending</td>
                                        </t>
                                        <t t-if="order.order_status==2">
                                            <td class="btn btn-info">Accepted</td>
                                        </t>
                                        <t t-if="order.order_status==3">
                                            <td class="btn btn-success">Delivered</td>
                                        </t>
                                        <td><a class="btn btn-outline-secondary" t-att-href="'/view_order_deatail/%s' % order.id">View</a></td>
                                    </tr>
                                    <t t-set="sr_no" t-value="sr_no+1"/>
                                </t>
                        </tbody>
                    </table>
                </div>      
            </div>
            <t t-call="Engineer_as_a_service.footer"/>
        </t>
    </template>


