    <template id="jobs">
        <t t-call="web.layout">        
        <t t-call="Engineer_as_a_service.header"/>
            <div class="container">  
                    <div class="mt-5 mb-5">
                       <h1>Job Arrives List </h1> 
                    </div>
                    <div>
                        <table class="table" style="width:80%">
                            <thead>
                                <tr>
                                    <th>Order Id</th>
                                    <th>Client Name</th>
                                    <th>Mobile No</th>
                                    <th>Job Date</th>
                                    <th>Job Time</th>
                                    <th>status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <t t-set="sr_no" t-value="1"/>
                                    <t t-foreach="jobs" t-as="job">

                                        <tr>
                                            <td><t t-esc="sr_no"/></td>
                                            <td><t t-esc="job.client_id.name"/></td>
                                            <td><t t-esc="job.client_id.mobile_no"/></td>
                                            <td>
                                                <t t-esc="job.create_date.day"/>/
                                                <t t-esc="job.create_date.month"/>/
                                                <t t-esc="job.create_date.year"/>
                                            </td>
                                            <td>
                                                <t t-esc="job.create_date.hour"/>:
                                                <t t-esc="job.create_date.minute"/>
                                            </td>
                                            <t t-if="job.order_status==0">
                                                <td class="btn btn-danger">rejected</td>
                                            </t>
                                            <t t-if="job.order_status==1">
                                                <td class="btn btn-warning">Pending</td>
                                            </t>
                                            <t t-if="job.order_status==2">
                                                <td class="btn btn-info">Accepted</td>
                                            </t>
                                            <t t-if="job.order_status==3">
                                                <td class="btn btn-success">Delivered</td>
                                            </t>
                                            <td>
                                                <a class="btn btn-outline-secondary" t-att-href="'/view_jobs_detail/%s' % job.id">View</a>
                                            </td>
                                        </tr>
                                    <t t-set="sr_no" t-value="sr_no+1"/>
                                    </t>
                            </tbody>
                        
                        </table>
                    </div>
            </div>
            <t t-call="Engineer_as_a_service.footer"/>
        </t>
    </template>

